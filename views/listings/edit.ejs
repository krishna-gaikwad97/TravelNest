  <% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="newheading">Edit your Listing</h3>
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        
        <div>
          <label for="title" class="form-label">Title</label>
          <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"/>
        </div>
        <br />
        
        <div>
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="listing[description]" class="form-control"><%= listing.description %></textarea>
        </div>
        <br />

        <div>
          <label for="image" class="form-label">Image</label>
          <input id="image" name="listing[image]" value="<%= listing.image %>" type="text" class="form-control"/>
        </div>
        <br />

        <div class="row">
          <div class="col-4">
            <label for="price" class="form-label">Price</label>
            <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"/>
          </div>

          <div class="mb-3 col-8">
            <label for="country" class="form-label">Country</label>
            <input id="country" name="listing[country]" value="<%= listing.country %>" type="text" class="form-control"/>
          </div>
        </div>
        
        <div>
          <label for="location" class="form-label">Location</label>
          <input id="location" name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"/>
        </div>
        <br /><br />

        <button type="submit" class="btn btn-outline-success">Edit</button>
      </form>
    </div>
  </div>
</body>

